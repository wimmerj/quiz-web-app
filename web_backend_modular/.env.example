# Environment variables for local development
# Copy this file to .env and fill in your actual values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://quiz_user:password@localhost:5432/quiz_modular

# For SQLite (development only)
# DATABASE_URL=sqlite:///quiz_modular.db

# CORS Configuration (GitHub Pages URL)
CORS_ORIGINS=https://your-username.github.io,http://localhost:3000,http://127.0.0.1:3000

# Monica AI Configuration
MONICA_API_KEY=your-monica-api-key-here

# Rate Limiting
RATE_LIMIT_STORAGE=memory://

# Redis (for production scaling)
# REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Security
JWT_EXPIRATION_HOURS=24

# File Upload (if needed)
MAX_CONTENT_LENGTH=16777216  # 16MB

# Email Configuration (for notifications)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password
